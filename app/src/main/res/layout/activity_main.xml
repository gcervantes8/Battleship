<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.cs4330.battleship.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <Button
            android:text="@string/new_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetGame"
            android:onClick="resetGame"
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/AppTheme"
            android:background="@android:color/holo_green_dark" />

        <TextView
            android:text="Highscore: 0%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highscoreText"
            android:layout_marginTop="7dp"
            android:textSize="18sp" />

        <TextView
            android:text="Ship hits: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/amountHit"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shipsSunk"
            android:text="Ships sunk: 0 / 5"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Shots: 0"
            android:layout_marginTop="5dp"
            android:id="@+id/shotCount"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:typeface="normal" />

        <edu.utep.cs.cs4330.battleship.BoardView
            android:id="@+id/boardView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</RelativeLayout>
